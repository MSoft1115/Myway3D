///////////////////////////////////////////////////////////////////////  
//  BranchPS
//

struct PS_IN
{
	float2 uv0 : TEXCOORD0;
	float2 depth : TEXCOORD1;
};

uniform sampler2D gTex;

float4 main(PS_IN In) : COLOR
{
	float d = In.depth.x / In.depth.y;
	float a = tex2D(gTex, In.uv0).a;
	
	return float4(d, d, d, a);
}