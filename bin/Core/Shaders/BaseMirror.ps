struct PS_IN
{
    float2 tcoord : TEXCOORD0;
};

struct PS_OUT
{
    float4 color	: COLOR0;
};

uniform sampler2D tex_diffuse : register(s0);

uniform float4 gMirrorColor;

PS_OUT main(PS_IN In)
{
    PS_OUT Out;

    Out.color = tex2D(tex_diffuse, In.tcoord) * gMirrorColor;
       
    return Out;
}

