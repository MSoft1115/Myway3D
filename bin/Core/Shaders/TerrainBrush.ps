struct PS_IN
{
    float2 tcoord0		: TEXCOORD0;
};

struct PS_OUT
{
    float4 color	: COLOR0;
};

uniform sampler2D gTex_Brush : register(s0);

PS_OUT main(PS_IN In)
{
    PS_OUT Out;
    
	float r = tex2D(gTex_Brush, In.tcoord0).r;

	Out.color.rgb = lerp(float3(1, 1, 1), float3(0, 0, 1), r);
	Out.color.a = 1;
       
    return Out;
}


