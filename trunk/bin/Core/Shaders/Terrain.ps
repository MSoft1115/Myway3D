struct PS_IN
{
    float2 tcoord0		: TEXCOORD0;
    float4 tcoord12		: TEXCOORD1;
    float4 tcoord34		: TEXCOORD2;
    float4 normalDepth 		: TEXCOORD3;
};

struct PS_OUT
{
    float4 color	: COLOR0;
    float4 normal	: COLOR1;
    float4 material : COLOR2;
    float4 depth	: COLOR3;
};

uniform sampler2D tex_blend : register(s0);
uniform sampler2D tex_blend1 : register(s1);
uniform sampler2D tex_0 : register(s2);
uniform sampler2D tex_1 : register(s3);
uniform sampler2D tex_2 : register(s4);
uniform sampler2D tex_3 : register(s5);
uniform sampler2D tex_4 : register(s6);
uniform sampler2D tex_5 : register(s7);
uniform sampler2D tex_6 : register(s8);
uniform sampler2D tex_7 : register(s9);

uniform float4 gClipPlane;

PS_OUT main(PS_IN In)
{
    PS_OUT Out;
    
    float4 weight = tex2D(tex_blend, In.tcoord0);
    float4 weight1 = tex2D(tex_blend1, In.tcoord0);
    
    Out.color = tex2D(tex_0, In.tcoord12.xy) * weight.a +
                tex2D(tex_1, In.tcoord12.zw) * weight.r +
                tex2D(tex_2, In.tcoord34.xy) * weight.g +
                tex2D(tex_3, In.tcoord34.zw) * weight.b;

    Out.color += tex2D(tex_4, In.tcoord12.xy) * weight1.a +
                tex2D(tex_5, In.tcoord12.zw) * weight1.r +
                tex2D(tex_6, In.tcoord34.xy) * weight1.g +
                tex2D(tex_7, In.tcoord34.zw) * weight1.b;
                
    Out.normal = float4(In.normalDepth.xy, 0, 0);
    Out.material = float4(1, 1, 1, 1);
    Out.depth = float4(In.normalDepth.w * gClipPlane.w, 0, 0, 0);
       
    return Out;
}


