struct PS_IN
{
	float2 uv0;
};

uniform float4 gUVOffsets[4];
uniform sampler2D gTex_Color;

float4 main(PS_IN In) : COLOR
{
	float4 clr = 0;
	
	for (int i = 0; i < 4; ++i)
	{
		clr += tex2D(gTex_Color, In.uv0 + gUVOffsets[i].xy);
	}
	
	clr /= 4;

	return clr;
}